#!/bin/bash

export SCRIPT_DIR=$(dirname "$0")

##
## Build Process
##

main ()
{
    cd src/Movement 
    carthage bootstrap --platform iphonesimulator --no-use-binaries 2>&1>/dev/null
    xctool clean build test -project Movement.xcodeproj/ -scheme Movement -sdk iphonesimulator ONLY_ACTIVE_ARCH=NO 2>&1> /dev/null

    local status=$?

    exit $status
}

main
