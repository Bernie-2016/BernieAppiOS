#!/bin/bash

export SCRIPT_DIR=$(dirname "$0")

##
## Build Process
##

main ()
{
    cd src/Connect 
    carthage bootstrap --platform iphonesimulator --no-use-binaries
    xctool clean build -project Connect.xcodeproj/ -scheme Connect -sdk iphonesimulator ONLY_ACTIVE_ARCH=NO
    xctool test -project Connect.xcodeproj/ -scheme Connect -sdk iphonesimulator8.0 ONLY_ACTIVE_ARCH=NO

    local status=$?

    exit $status
}

main
